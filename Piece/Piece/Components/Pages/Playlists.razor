@page "/playlists"
@rendermode InteractiveServer

<PageTitle>Playlists - Piece</PageTitle>


<style>
    body {
        background-color: #1a1a1a;
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .playlists-container {
        padding: 40px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
    }

    .page-title {
        font-size: 48px;
        font-weight: 700;
        color: #ffffff;
        margin: 0;
    }

    .btn-primary {
        background: linear-gradient(135deg, #FFD335 0%, #764ba2 100%);
        color: #ffffff;
        border: none;
        padding: 12px 24px;
        border-radius: 24px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
        }

    .playlists-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
    }

    .playlist-card {
        background-color: #2a2a2a;
        border-radius: 16px;
        padding: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .playlist-card:hover {
            background-color: #3a3a3a;
            transform: translateY(-5px);
        }

    .playlist-cover {
        width: 100%;
        aspect-ratio: 1;
        background: linear-gradient(135deg, #FFD335 0%, #764ba2 100%);
        border-radius: 12px;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 64px;
    }

    .playlist-info {
        margin-bottom: 12px;
    }

    .playlist-name {
        font-size: 18px;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 4px;
    }

    .playlist-meta {
        font-size: 14px;
        color: #888;
    }

    .playlist-description {
        font-size: 13px;
        color: #aaa;
        margin-bottom: 16px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .playlist-actions {
        display: flex;
        gap: 8px;
    }

    .btn-icon {
        background: none;
        border: none;
        color: #888;
        font-size: 20px;
        cursor: pointer;
        padding: 8px;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-icon:hover {
            color: #ffffff;
            background-color: rgba(255, 255, 255, 0.1);
        }

        .btn-icon.delete:hover {
            color: #ff4444;
        }

    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        backdrop-filter: blur(4px);
    }

    .modal {
        background-color: #2a2a2a;
        border-radius: 16px;
        padding: 32px;
        max-width: 500px;
        width: 90%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .modal-header {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 24px;
        color: #ffffff;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 8px;
    }

    .form-input,
    .form-textarea {
        width: 100%;
        background-color: #1a1a1a;
        border: 2px solid #3a3a3a;
        border-radius: 8px;
        padding: 12px 16px;
        color: #ffffff;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }

        .form-input:focus,
        .form-textarea:focus {
            outline: none;
            border-color: #667eea;
        }

    .form-textarea {
        resize: vertical;
        min-height: 100px;
    }

    .modal-actions {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        margin-top: 24px;
    }

    .btn-secondary {
        background-color: #3a3a3a;
        color: #ffffff;
        border: none;
        padding: 12px 24px;
        border-radius: 24px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #4a4a4a;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #888;
    }

    .empty-state-icon {
        font-size: 96px;
        margin-bottom: 24px;
    }

    .empty-state h3 {
        font-size: 24px;
        margin-bottom: 12px;
        color: #ffffff;
    }

    /* Loading State */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 400px;
        color: #888;
    }

    .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid #3a3a3a;
        border-top-color: #ffffff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }
</style>

<div class="playlists-container">
    <div class="page-header">
        <h1 class="page-title">Playlists</h1>
        <button class="btn-primary" @onclick="OpenCreateModal">
            <span>➕</span>
            <span>Create Playlist</span>
        </button>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner"></div>
            <p style="margin-top: 20px;">Loading playlists...</p>
        </div>
    }
    else if (!playlists.Any())
    {
        <div class="empty-state">
            <div class="empty-state-icon">🎵</div>
            <h3>No playlists yet</h3>
            <p>Create your first playlist to organize your music</p>
        </div>
    }
    else
    {
        <div class="playlists-grid">
            @foreach (var playlist in playlists)
            {
                <div class="playlist-card">
                    <div class="playlist-cover" @onclick="() => ViewPlaylist(playlist.Id)">
                        📂
                    </div>
                    <div class="playlist-info">
                        <div class="playlist-name">@playlist.Name</div>
                        <div class="playlist-meta">
                            @playlist.PlaylistTracks.Count @(playlist.PlaylistTracks.Count == 1 ? "track" : "tracks")
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(playlist.Description))
                    {
                        <div class="playlist-description">@playlist.Description</div>
                    }
                    <div class="playlist-actions">
                        <button class="btn-icon" @onclick="() => OpenEditModal(playlist)" title="Edit">
                            ✏️
                        </button>
                        <button class="btn-icon delete" @onclick="() => DeletePlaylist(playlist.Id)" title="Delete">
                            🗑️
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModal)
{
<div style="position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background: rgba(0,0,0,0.8);
                z-index: 99999;
                display: flex;
                align-items: center;
                justify-content: center;"
     @onclick="CloseModal">

    <div style="background: #2a2a2a;
                    padding: 32px;
                    border-radius: 16px;
                    max-width: 500px;
                    width: 90%;
                    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);"
         @onclick:stopPropagation="true">

        <h2 style="font-size: 24px;
                       font-weight: 700;
                       margin-bottom: 24px;
                       color: #ffffff;">
            @(isEditMode ? "Edit Playlist" : "Create Playlist")
        </h2>

        <div style="margin-bottom: 20px;">
            <label style="display: block;
                              font-size: 14px;
                              font-weight: 600;
                              color: #ffffff;
                              margin-bottom: 8px;">
                Name
            </label>
            <input type="text"
                   @bind="playlistName"
                   placeholder="My Awesome Playlist"
                   style="width: 100%;
                              background-color: #1a1a1a;
                              border: 2px solid #3a3a3a;
                              border-radius: 8px;
                              padding: 12px 16px;
                              color: #ffffff;
                              font-size: 14px;" />
        </div>

        <div style="margin-bottom: 20px;">
            <label style="display: block;
                              font-size: 14px;
                              font-weight: 600;
                              color: #ffffff;
                              margin-bottom: 8px;">
                Description (Optional)
            </label>
            <textarea @bind="playlistDescription"
                      placeholder="A collection of my favorite tracks..."
                      style="width: 100%;
                                 background-color: #1a1a1a;
                                 border: 2px solid #3a3a3a;
                                 border-radius: 8px;
                                 padding: 12px 16px;
                                 color: #ffffff;
                                 font-size: 14px;
                                 resize: vertical;
                                 min-height: 100px;"></textarea>
        </div>

        <div style="margin-bottom: 20px;">
            <label style="display: flex;
                              align-items: center;
                              gap: 8px;
                              cursor: pointer;
                              font-size: 14px;
                              font-weight: 600;
                              color: #ffffff;">
                <input type="checkbox"
                       @bind="isPublic"
                       style="width: 18px; height: 18px; cursor: pointer;" />
                <span>Make this playlist public</span>
            </label>
        </div>

        <div style="display: flex;
                        gap: 12px;
                        justify-content: flex-end;
                        margin-top: 24px;">
            <button @onclick="CloseModal"
                    style="background-color: #3a3a3a;
                               color: #ffffff;
                               border: none;
                               padding: 12px 24px;
                               border-radius: 24px;
                               font-size: 14px;
                               font-weight: 600;
                               cursor: pointer;">
                Cancel
            </button>
            <button @onclick="SavePlaylist"
                        style="background: linear-gradient(135deg, #FFD335 0%, #764ba2 100%);
                               color: #ffffff;
                               border: none;
                               padding: 12px 24px;
                               border-radius: 24px;
                               font-size: 14px;
                               font-weight: 600;
                               cursor: pointer;">
                @(isEditMode ? "Save Changes" : "Create")
            </button>
        </div>
    </div>
</div>
}
