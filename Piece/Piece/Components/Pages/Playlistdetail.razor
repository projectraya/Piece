@page "/playlist/{id:int}"
@rendermode InteractiveServer
@inherits Piece.Components.Pages.PlaylistDetail
@using Piece.Services
@inject PlayerService PlayerService

<PageTitle>@(playlist?.Name ?? "Playlist") - Piece</PageTitle>

<style>
    body {
        background-color: #1a1a1a;
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .playlist-detail-container {
        padding: 40px;
        max-width: 1400px;
        margin: 0 auto;
        padding-bottom: 120px;
    }

    .playlist-header {
        display: flex;
        gap: 32px;
        margin-bottom: 40px;
        align-items: flex-start;
    }

    .playlist-cover-large {
        width: 240px;
        height: 240px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 96px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        flex-shrink: 0;
    }

    .playlist-info-header {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .playlist-type {
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        color: #888;
        margin-bottom: 8px;
    }

    .playlist-title {
        font-size: 48px;
        font-weight: 700;
        color: #ffffff;
        margin: 0 0 16px 0;
    }

    .playlist-description-text {
        font-size: 14px;
        color: #aaa;
        margin-bottom: 16px;
    }

    .playlist-stats {
        display: flex;
        gap: 16px;
        font-size: 14px;
        color: #888;
        margin-bottom: 24px;
    }

    .playlist-actions-header {
        display: flex;
        gap: 12px;
    }

    .btn-play {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #ffffff;
        border: none;
        padding: 14px 32px;
        border-radius: 24px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-play:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
        }

    .btn-icon-large {
        background: none;
        border: 2px solid #3a3a3a;
        color: #ffffff;
        font-size: 24px;
        cursor: pointer;
        padding: 12px;
        border-radius: 50%;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 48px;
        height: 48px;
    }

        .btn-icon-large:hover {
            border-color: #ffffff;
            transform: scale(1.1);
        }

    .tracks-section {
        margin-top: 40px;
    }

    .tracks-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .tracks-title {
        font-size: 24px;
        font-weight: 700;
        color: #ffffff;
    }

    .btn-add-tracks {
        background-color: #2a2a2a;
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-add-tracks:hover {
            background-color: #3a3a3a;
        }

    .tracks-table {
        width: 100%;
    }

    .track-row {
        display: grid;
        grid-template-columns: 50px 1fr 200px 100px 80px;
        gap: 16px;
        padding: 12px 16px;
        border-radius: 8px;
        align-items: center;
        transition: background-color 0.2s ease;
        cursor: pointer;
    }

        .track-row:hover {
            background-color: #2a2a2a;
        }

        .track-row.playing {
            background-color: #3a3a3a;
        }

    .track-number {
        color: #888;
        text-align: center;
        font-size: 14px;
    }

    .track-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .track-art-small {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        flex-shrink: 0;
    }

    .track-text {
        overflow: hidden;
    }

    .track-name {
        font-size: 14px;
        font-weight: 600;
        color: #ffffff;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .track-artist-small {
        font-size: 13px;
        color: #888;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .track-album {
        font-size: 14px;
        color: #888;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .track-duration {
        font-size: 14px;
        color: #888;
        text-align: right;
    }

    .track-actions {
        display: flex;
        gap: 4px;
        justify-content: flex-end;
    }

    .btn-track-action {
        background: none;
        border: none;
        color: #888;
        font-size: 18px;
        cursor: pointer;
        padding: 4px;
        border-radius: 4px;
        transition: all 0.3s ease;
        opacity: 0;
    }

    .track-row:hover .btn-track-action {
        opacity: 1;
    }

    .btn-track-action:hover {
        color: #ffffff;
        background-color: rgba(255, 255, 255, 0.1);
    }

    .btn-track-action.remove:hover {
        color: #ff4444;
    }

    /* Add Tracks Modal */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        backdrop-filter: blur(4px);
    }

    .modal-large {
        background-color: #2a2a2a;
        border-radius: 16px;
        padding: 32px;
        max-width: 800px;
        width: 90%;
        max-height: 80vh;
        overflow-y: auto;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .modal-title {
        font-size: 24px;
        font-weight: 700;
        color: #ffffff;
    }

    .btn-close {
        background: none;
        border: none;
        color: #888;
        font-size: 32px;
        cursor: pointer;
        padding: 0;
        line-height: 1;
        transition: color 0.3s;
    }

        .btn-close:hover {
            color: #ffffff;
        }

    .search-box-modal {
        background-color: #1a1a1a;
        border-radius: 12px;
        padding: 12px 16px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .search-input-modal {
        flex: 1;
        background: none;
        border: none;
        color: #ffffff;
        font-size: 14px;
        outline: none;
    }

        .search-input-modal::placeholder {
            color: #666;
        }

    .available-tracks {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .available-track-row {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        background-color: #1a1a1a;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .available-track-row:hover {
            background-color: #3a3a3a;
        }

        .available-track-row.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

            .available-track-row.disabled:hover {
                background-color: #1a1a1a;
            }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #888;
    }

    .empty-state-icon {
        font-size: 64px;
        margin-bottom: 20px;
    }

    /* Loading State */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 400px;
        color: #888;
    }

    .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid #3a3a3a;
        border-top-color: #ffffff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #888;
        text-decoration: none;
        font-size: 14px;
        margin-bottom: 24px;
        transition: color 0.3s;
    }

        .back-button:hover {
            color: #ffffff;
        }
</style>

<div class="playlist-detail-container">
    <a href="/playlists" class="back-button">
        <span>←</span>
        <span>Back to Playlists</span>
    </a>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner"></div>
            <p style="margin-top: 20px;">Loading playlist...</p>
        </div>
    }
    else if (playlist == null)
    {
        <div class="empty-state">
            <div class="empty-state-icon">❌</div>
            <h3>Playlist not found</h3>
            <p>This playlist may have been deleted</p>
        </div>
    }
    else
    {
        <div class="playlist-header">
            <div class="playlist-cover-large">📂</div>
            <div class="playlist-info-header">
                <div class="playlist-type">Playlist</div>
                <h1 class="playlist-title">@playlist.Name</h1>
                @if (!string.IsNullOrEmpty(playlist.Description))
                {
                    <p class="playlist-description-text">@playlist.Description</p>
                }
                <div class="playlist-stats">
                    <span>@playlistTracks.Count @(playlistTracks.Count == 1 ? "track" : "tracks")</span>
                </div>
                <div class="playlist-actions-header">
                    <button class="btn-play" @onclick="PlayPlaylist">
                        <span>▶</span>
                        <span>Play</span>
                    </button>
                    <button class="btn-icon-large" title="Shuffle">🔀</button>
                </div>
            </div>
        </div>

        <div class="tracks-section">
            <div class="tracks-header">
                <h2 class="tracks-title">Tracks</h2>
                <button class="btn-add-tracks" @onclick="OpenAddTracksModal">
                    <span>➕</span>
                    <span>Add Tracks</span>
                </button>
            </div>

            @if (playlistTracks.Any())
            {
                <div class="tracks-table">
                    @for (int i = 0; i < playlistTracks.Count; i++)
                    {
                        var track = playlistTracks[i];
                        var index = i;
                        <div class="track-row @(PlayerService.CurrentTrack?.Id == $"local-{track.Id}" ? "playing" : "")"
                             @onclick="() => PlayTrack(track)">
                            <div class="track-number">@(index + 1)</div>
                            <div class="track-info">
                                <div class="track-art-small">
                                    @if (!string.IsNullOrEmpty(track.CoverImageUrl))
                                    {
                                        <img src="@track.CoverImageUrl" alt="@track.Title" />
                                    }
                                    else
                                    {
                                        <span>🎵</span>
                                    }
                                </div>
                                <div class="track-text">
                                    <div class="track-name">@track.Title</div>
                                    <div class="track-artist-small">@track.ArtistName</div>
                                </div>
                            </div>
                            <div class="track-album">@(track.Genre?.Name ?? "Unknown")</div>
                            <div class="track-duration">3:45</div>
                            <div class="track-actions">
                                <button class="btn-track-action remove"
                                        @onclick="() => RemoveTrackFromPlaylist(track.Id)"
                                        @onclick:stopPropagation="true"
                                        title="Remove from playlist">
                                    ✕
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">🎵</div>
                    <h3>No tracks yet</h3>
                    <p>Add some tracks to get started</p>
                </div>
            }
        </div>
    }
</div>

@if (showAddTracksModal)
{
    <div class="modal-overlay" @onclick="CloseAddTracksModal">
        <div class="modal-large" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2 class="modal-title">Add Tracks to Playlist</h2>
                <button class="btn-close" @onclick="CloseAddTracksModal">×</button>
            </div>

            <div class="search-box-modal">
                <span>🔍</span>
                <input type="text"
                       class="search-input-modal"
                       @bind="searchQuery"
                       @bind:event="oninput"
                       placeholder="Search your library..." />
            </div>

            <div class="available-tracks">
                @foreach (var track in FilteredAvailableTracks)
                {
                    var isInPlaylist = playlistTracks.Any(t => t.Id == track.Id);
                    <div class="available-track-row @(isInPlaylist ? "disabled" : "")"
                         @onclick="() => AddTrackToPlaylist(track.Id)">
                        <div class="track-art-small">
                            @if (!string.IsNullOrEmpty(track.CoverImageUrl))
                            {
                                <img src="@track.CoverImageUrl" alt="@track.Title" />
                            }
                            else
                            {
                                <span>🎵</span>
                            }
                        </div>
                        <div class="track-text" style="flex: 1;">
                            <div class="track-name">@track.Title</div>
                            <div class="track-artist-small">@track.ArtistName</div>
                        </div>
                        @if (isInPlaylist)
                        {
                            <span style="color: #667eea; font-size: 12px;">✓ Added</span>
                        }
                        else
                        {
                            <span style="color: #888;">➕</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
}
