@page "/player"
@rendermode InteractiveServer
@using Piece.DTOs
@using Piece.Services
@inject ApplicationDbContext DbContext
@inject IJSRuntime JSRuntime
@inject HttpClient HttpClient
@inject PlayerService PlayerService
@inject IConfiguration Configuration
@inject IFavoriteService FavoriteService
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Piece - Music Player</PageTitle>

<style>
    .filter-section {
        display: flex;
        align-items: center;
        padding: 10px 0;
        margin-top: 10px;
    }
    /* Dark Theme Styling */
    body {
        background-color: #1a1a1a;
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .player-container {
        display: flex;
        height: calc(100vh - 120px);
        background-color: #1a1a1a;
        padding: 0;
        margin: 0;
        overflow: hidden;
    }

    /* Main Content */
    .main-content {
        flex: 1;
        background-color: #1a1a1a;
        padding: 30px;
        overflow-y: auto;
    }

    /* Search Bar */
    .search-container {
        margin-bottom: 30px;
        position: sticky;
        top: 0;
        background-color: #1a1a1a;
        padding: 20px 0;
        z-index: 100;
    }

    .search-box {
        display: flex;
        align-items: center;
        background-color: #2a2a2a;
        border-radius: 24px;
        padding: 12px 20px;
        gap: 12px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .search-box:focus-within {
            border-color: #FFD335;
            background-color: #3a3a3a;
        }

    .search-icon {
        font-size: 20px;
        color: #888;
    }

    .search-input {
        flex: 1;
        background: none;
        border: none;
        color: #ffffff;
        font-size: 16px;
        outline: none;
    }

        .search-input::placeholder {
            color: #666;
        }

    .search-clear {
        background: none;
        border: none;
        color: #888;
        font-size: 20px;
        cursor: pointer;
        padding: 0;
        display: flex;
        align-items: center;
        transition: color 0.3s;
    }

        .search-clear:hover {
            color: #ffffff;
        }

    .search-tabs {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .search-tab {
        padding: 8px 16px;
        background-color: #2a2a2a;
        border: none;
        border-radius: 20px;
        color: #888;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .search-tab.active {
            background-color: #FFD335;
            color: #1a1a1a;
            font-weight: 600;
        }

        .search-tab:hover:not(.active) {
            background-color: #3a3a3a;
            color: #ffffff;
        }

    .content-section {
        margin-bottom: 40px;
    }

    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .section-title {
        font-size: 24px;
        font-weight: 700;
        color: #ffffff;
    }

    .see-all {
        color: #888;
        font-size: 14px;
        cursor: pointer;
        transition: color 0.3s;
    }

        .see-all:hover {
            color: #ffffff;
        }

    /* Track Grid */
    .track-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 20px;
    }

    .track-card {
        background-color: #2a2a2a;
        border-radius: 12px;
        padding: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .track-card:hover {
            background-color: #3a3a3a;
            transform: translateY(-5px);
        }

        .track-card.playing {
            background-color: #4a4a4a;
            border: 2px solid #FFD335;
        }

    .track-art {
        width: 100%;
        aspect-ratio: 1;
        background: linear-gradient(135deg, #FFD335 0%, #764ba2 100%);
        border-radius: 8px;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
        overflow: hidden;
    }

        .track-art img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .track-title {
        font-size: 14px;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 4px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .track-artist {
        font-size: 12px;
        color: #888;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .track-source-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: #FFD335;
        backdrop-filter: blur(10px);
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 10px;
        font-weight: 600;
        color: #1a1a1a;
    }

    .track-genre-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        backdrop-filter: blur(10px);
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 10px;
        font-weight: 600;
        color: #ffffff;
    }

    /* Loading State */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        color: #888;
    }

    .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid #3a3a3a;
        border-top-color: #FFD335;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #888;
    }

    .empty-state-icon {
        font-size: 64px;
        margin-bottom: 20px;
    }

    /* Scrollbar Styling */
    .main-content::-webkit-scrollbar {
        width: 8px;
    }

    .main-content::-webkit-scrollbar-track {
        background: #1a1a1a;
    }

    .main-content::-webkit-scrollbar-thumb {
        background: #3a3a3a;
        border-radius: 4px;
    }

        .main-content::-webkit-scrollbar-thumb:hover {
            background: #4a4a4a;
        }

    /* Search Loading */
    .search-loading {
        text-align: center;
        padding: 40px 20px;
        color: #888;
    }

        .search-loading .spinner {
            margin: 0 auto 20px;
        }
</style>

@if (isLoading)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p style="margin-top: 20px;">Loading your music...</p>
    </div>
}
else
{
    <div class="player-container">
        <div class="main-content">
            <!-- Search Section -->
            <div class="search-container">
                <div class="search-box">
                    <span class="search-icon">🔍</span>
                    <input type="text"
                           class="search-input"
                           placeholder="Search your library or Jamendo..."
                           @bind="searchQuery"
                           @bind:event="oninput"
                           @onkeyup="HandleSearchKeyUp" />
                    @if (!string.IsNullOrEmpty(searchQuery))
                    {
                        <button class="search-clear" @onclick="ClearSearch">✕</button>
                    }
                </div>
                <div class="search-tabs">
                    <button class="search-tab @(activeTab == "library" ? "active" : "")"
                            @onclick='() => SetActiveTab("library")'>
                        Your Library
                    </button>
                    <button class="search-tab @(activeTab == "jamendo" ? "active" : "")"
                            @onclick='() => SetActiveTab("jamendo")'>
                        Jamendo
                    </button>
                </div>

                <!-- Genre Filter -->
                <div class="filter-section">
                    <label style="color: #888; font-size: 12px; margin-right: 10px;">Filter by Genre:</label>
                    <select @bind="selectedGenre" @bind:after="ApplyGenreFilter"
                            style="background-color: #2a2a2a;
                                   color: #ffffff;
                                   border: 2px solid #3a3a3a;
                                   border-radius: 8px;
                                   padding: 8px 12px;
                                   font-size: 14px;
                                   cursor: pointer;">
                        <option value="">All Genres</option>
                        @foreach (var genre in availableGenres.OrderBy(g => g))
                        {
                            <option value="@genre">@genre</option>
                        }
                    </select>

                    @if (!string.IsNullOrEmpty(selectedGenre))
                    {
                        <button @onclick="ClearGenreFilter"
                                style="background: none;
                                       border: none;
                                       color: #FFD335;
                                       cursor: pointer;
                                       font-size: 14px;
                                       margin-left: 10px;">
                            Clear Filter
                        </button>
                    }
                </div>
            </div>

            @if (isSearching)
            {
                <div class="search-loading">
                    <div class="spinner"></div>
                    <p>Searching...</p>
                </div>
            }
            else if (activeTab == "library")
            {
                @if (filteredTracks.Any())
                {
                    <div class="content-section">
                        <div class="section-header">
                            <h2 class="section-title">Your Library</h2>
                            <span style="color: #888; font-size: 14px;">@filteredTracks.Count tracks</span>
                        </div>
                        <div class="track-grid">
                            @foreach (var track in filteredTracks)
                            {
                                <div class="track-card @(PlayerService.CurrentTrack?.Id == $"local-{track.Id}" ? "playing" : "")"
                                     @onclick="() => PlayTrack(track)">
                                    @if (track.Genre != null)
                                    {
                                        string color = track.Genre.Color;
                                        <div class="track-genre-badge" style="background-color: @color">@track.Genre.Name</div>
                                    }
                                    <div class="track-art">
                                        @if (!string.IsNullOrEmpty(track.CoverImageUrl))
                                        {
                                            <img src="@track.CoverImageUrl" alt="@track.Title" />
                                        }
                                        else
                                        {
                                            <span>🎵</span>
                                        }
                                    </div>
                                    <div class="track-title">@track.Title</div>
                                    <div class="track-artist">@track.ArtistName</div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">🎵</div>
                        <h3>No tracks found</h3>
                        <p>@(string.IsNullOrEmpty(selectedGenre) ? "Your library is empty" : $"No tracks found in genre: {selectedGenre}")</p>
                    </div>
                }
            }
            else if (activeTab == "jamendo")
            {
                @if (filteredJamendoResults.Any())
                {
                    <div class="content-section">
                        <div class="section-header">
                            <h2 class="section-title">Jamendo</h2>
                            <span style="color: #888; font-size: 14px;">@filteredJamendoResults.Count tracks</span>
                        </div>
                        <div class="track-grid">
                            @foreach (var track in filteredJamendoResults)
                            {
                                <div class="track-card @(PlayerService.CurrentTrack?.Id == $"jamendo-{track.Id}" ? "playing" : "")"
                                     @onclick="() => PlayJamendoTrack(track)">
                                    <div class="track-source-badge">JAMENDO</div>

                                    @if (track.MusicInfo?.Tags?.Genres?.Any() ?? false)
                                    {
                                        <div class="track-genre-badge" style="top: 10px; left: 80px;">
                                            @track.MusicInfo.Tags.Genres.First()
                                        </div>
                                    }

                                    <div class="track-art">
                                        @if (!string.IsNullOrEmpty(track.AlbumImage))
                                        {
                                            <img src="@track.AlbumImage" alt="@track.Name" />
                                        }
                                        else
                                        {
                                            <span>🎵</span>
                                        }
                                    </div>
                                    <div class="track-title">@track.Name</div>
                                    <div class="track-artist">@track.ArtistName</div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else if (!string.IsNullOrEmpty(searchQuery))
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">🔍</div>
                        <h3>No Jamendo results found</h3>
                        <p>Try a different search term or genre</p>
                    </div>
                }
                else if (!string.IsNullOrEmpty(selectedGenre))
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">🔍</div>
                        <h3>No tracks found</h3>
                        <p>No Jamendo tracks found for genre: {selectedGenre}</p>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">🎵</div>
                        <h3>Discover Jamendo Music</h3>
                        <p>Search for artists or songs, or select a genre to explore free music</p>
                    </div>
                }
            }
        </div>
    </div>
}

@code {
    private List<Track> tracks = new();
    private bool isLoading = true;
    private HashSet<int> favoriteTrackIds = new();
    private HashSet<string> favoriteJamendoIds = new();

    private string searchQuery = "";
    private string activeTab = "library";
    private bool isSearching = false;
    private List<JamendoTrack> jamendoResults = new();
    private System.Threading.Timer? searchDebounceTimer;
    private string? currentUserId;

    private string selectedGenre = "";
    private List<string> availableGenres = new();
    private List<Track> filteredTracks = new();
    private List<JamendoTrack> filteredJamendoResults = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(currentUserId))
            {
                var favoriteIds = await FavoriteService.GetUserFavoriteTrackIdsAsync(currentUserId);
                favoriteTrackIds = new HashSet<int>(favoriteIds);

                var jamendoFavorites = await FavoriteService.GetUserExternalFavoritesAsync(currentUserId, TrackSource.Jamendo);
                favoriteJamendoIds = jamendoFavorites.Select(f => f.ExternalId).ToHashSet();
            }
        }

        try
        {
            tracks = await DbContext.Tracks
                .Include(t => t.Genre)
                .Where(t => t.Source == TrackSource.Local && t.IsActive)
                .OrderBy(t => t.Title)
                .ToListAsync();

            availableGenres = tracks
                .Where(t => t.Genre != null)
                .Select(t => t.Genre!.Name)
                .Distinct()
                .ToList();

            filteredTracks = tracks;

            var playableTracks = tracks.Select(t =>
                PlayableTrack.FromLocalTrack(t, favoriteTrackIds.Contains(t.Id))
            ).ToList();
            PlayerService.SetAvailableTracks(playableTracks);

            isLoading = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading tracks: {ex.Message}");
            isLoading = false;
        }
    }

    private void PlayTrack(Track track)
    {
        bool isFavorite = favoriteTrackIds.Contains(track.Id);
        var playableTrack = PlayableTrack.FromLocalTrack(track, isFavorite);
        PlayerService.PlayTrack(playableTrack);
        track.PlayCount++;
        StateHasChanged();
    }

    private void PlayJamendoTrack(JamendoTrack track)
    {
        bool isFavorite = favoriteJamendoIds.Contains(track.Id);
        var playableTrack = PlayableTrack.FromJamendoTrack(
            track.Id,
            track.Name,
            track.ArtistName,
            track.AudioUrl,
            track.AlbumImage,
            isFavorite
        );
        PlayerService.PlayTrack(playableTrack);
        StateHasChanged();
    }

    private void HandleSearchKeyUp(KeyboardEventArgs e)
    {
        searchDebounceTimer?.Dispose();
        searchDebounceTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                if (!string.IsNullOrEmpty(searchQuery))
                {
                    if (activeTab == "library")
                    {
                        // Just filter local tracks
                        await ApplyGenreFilter();
                    }
                    else if (activeTab == "jamendo")
                    {
                        // Search Jamendo
                        await SearchJamendo();

                        // Add Jamendo genres to available genres
                        var jamendoGenres = jamendoResults
                            .Where(t => t.MusicInfo?.Tags?.Genres != null)
                            .SelectMany(t => t.MusicInfo!.Tags!.Genres)
                            .Distinct();

                        availableGenres = tracks
                            .Where(t => t.Genre != null)
                            .Select(t => t.Genre!.Name)
                            .Union(jamendoGenres)
                            .Distinct()
                            .OrderBy(g => g)
                            .ToList();

                        await ApplyGenreFilter();
                    }
                }
                else
                {
                    await ApplyGenreFilter();
                }
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task SearchJamendo()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            jamendoResults.Clear();
            return;
        }

        try
        {
            isSearching = true;
            StateHasChanged();

            var clientId = Configuration["Jamendo:ClientId"];
            var url = $"https://api.jamendo.com/v3.0/tracks/?client_id={clientId}&format=json&limit=200&search={Uri.EscapeDataString(searchQuery)}&include=musicinfo&tags=*&audioformat=mp32";

            var response = await HttpClient.GetFromJsonAsync<JamendoResponse>(url);

            if (response?.Results != null)
            {
                jamendoResults = response.Results;
            }
            else
            {
                jamendoResults.Clear();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching Jamendo: {ex.Message}");
            jamendoResults.Clear();
        }
        finally
        {
            isSearching = false;
            StateHasChanged();
        }
    }

    private async Task SearchJamendoByGenre(string genre)
    {
        try
        {
            isSearching = true;
            StateHasChanged();

            var clientId = Configuration["Jamendo:ClientId"];
            var url = $"https://api.jamendo.com/v3.0/tracks/?client_id={clientId}&format=json&limit=200&tags={Uri.EscapeDataString(genre.ToLower())}&include=musicinfo&audioformat=mp32";

            Console.WriteLine($"[SearchJamendoByGenre] Fetching tracks for genre: {genre}");

            var response = await HttpClient.GetFromJsonAsync<JamendoResponse>(url);

            if (response?.Results != null)
            {
                jamendoResults = response.Results;
                filteredJamendoResults = response.Results;
                Console.WriteLine($"[SearchJamendoByGenre] Found {jamendoResults.Count} tracks");
            }
            else
            {
                jamendoResults.Clear();
                filteredJamendoResults.Clear();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching Jamendo by genre: {ex.Message}");
            jamendoResults.Clear();
            filteredJamendoResults.Clear();
        }
        finally
        {
            isSearching = false;
            StateHasChanged();
        }
    }

    private async Task SetActiveTab(string tab)
    {
        activeTab = tab;

        if (tab == "jamendo")
        {
            // If a genre is selected but no results, fetch by genre
            if (!string.IsNullOrEmpty(selectedGenre) && !jamendoResults.Any())
            {
                await SearchJamendoByGenre(selectedGenre);
            }
            else if (!string.IsNullOrEmpty(searchQuery))
            {
                await SearchJamendo();
                await ApplyGenreFilter();
            }
        }
        else
        {
            await ApplyGenreFilter();
        }

        StateHasChanged();
    }

    private async void ClearSearch()
    {
        searchQuery = "";
        await ApplyGenreFilter();
        StateHasChanged();
    }

    private async Task ApplyGenreFilter()
    {
        if (string.IsNullOrEmpty(selectedGenre))
        {
            // Show all tracks based on search
            if (string.IsNullOrEmpty(searchQuery))
            {
                filteredTracks = tracks;
                filteredJamendoResults = jamendoResults;
            }
            else
            {
                // Filter by search query
                filteredTracks = tracks.Where(t =>
                    t.Title.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    t.ArtistName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)
                ).ToList();

                filteredJamendoResults = jamendoResults;
            }
        }
        else
        {
            // Filter by genre
            filteredTracks = tracks
                .Where(t => t.Genre?.Name == selectedGenre &&
                    (string.IsNullOrEmpty(searchQuery) ||
                     t.Title.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                     t.ArtistName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)))
                .ToList();

            // For Jamendo - if no results yet, fetch by genre
            if (activeTab == "jamendo" && !jamendoResults.Any())
            {
                await SearchJamendoByGenre(selectedGenre);
            }
            else
            {
                filteredJamendoResults = jamendoResults
                    .Where(t => t.MusicInfo?.Tags?.Genres?.Any(g =>
                        g.Equals(selectedGenre, StringComparison.OrdinalIgnoreCase)) ?? false)
                    .ToList();
            }
        }

        StateHasChanged();
    }

    private void ClearGenreFilter()
    {
        selectedGenre = "";
        _ = ApplyGenreFilter();
    }

    public void Dispose()
    {
        searchDebounceTimer?.Dispose();
    }

    // Jamendo API Models
    public class JamendoResponse
    {
        [System.Text.Json.Serialization.JsonPropertyName("results")]
        public List<JamendoTrack> Results { get; set; } = new();
    }

    public class JamendoTrack
    {
        [System.Text.Json.Serialization.JsonPropertyName("id")]
        public string Id { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("name")]
        public string Name { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("artist_name")]
        public string ArtistName { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("album_name")]
        public string AlbumName { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("album_image")]
        public string AlbumImage { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("audio")]
        public string AudioUrl { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("duration")]
        public int Duration { get; set; }

        [System.Text.Json.Serialization.JsonPropertyName("musicinfo")]
        public MusicInfo? MusicInfo { get; set; }
    }

    public class MusicInfo
    {
        [System.Text.Json.Serialization.JsonPropertyName("tags")]
        public Tags? Tags { get; set; }
    }

    public class Tags
    {
        [System.Text.Json.Serialization.JsonPropertyName("genres")]
        public List<string> Genres { get; set; } = new();

        [System.Text.Json.Serialization.JsonPropertyName("instruments")]
        public List<string> Instruments { get; set; } = new();

        [System.Text.Json.Serialization.JsonPropertyName("vartags")]
        public List<string> VarTags { get; set; } = new();
    }
}