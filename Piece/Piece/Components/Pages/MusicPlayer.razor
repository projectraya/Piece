@page "/player"
@rendermode InteractiveServer
@using Piece.DTOs
@using Piece.Services
@inject ApplicationDbContext DbContext
@inject IJSRuntime JSRuntime
@inject HttpClient HttpClient
@inject PlayerService PlayerService
@inject IConfiguration Configuration
@inject IFavoriteService FavoriteService
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Piece - Music Player</PageTitle>

<style>
    /* Dark Theme Styling */
    body {
        background-color: #1a1a1a;
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .player-container {
        display: flex;
        height: calc(100vh - 120px);
        background-color: #1a1a1a;
        padding: 0;
        margin: 0;
        overflow: hidden;
    }

    /* Main Content */
    .main-content {
        flex: 1;
        background-color: #1a1a1a;
        padding: 30px;
        overflow-y: auto;
    }

    /* Search Bar */
    .search-container {
        margin-bottom: 30px;
        position: sticky;
        top: 0;
        background-color: #1a1a1a;
        padding: 20px 0;
        z-index: 100;
    }

    .search-box {
        display: flex;
        align-items: center;
        background-color: #2a2a2a;
        border-radius: 24px;
        padding: 12px 20px;
        gap: 12px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .search-box:focus-within {
            border-color: #667eea;
            background-color: #3a3a3a;
        }

    .search-icon {
        font-size: 20px;
        color: #888;
    }

    .search-input {
        flex: 1;
        background: none;
        border: none;
        color: #ffffff;
        font-size: 16px;
        outline: none;
    }

        .search-input::placeholder {
            color: #666;
        }

    .search-clear {
        background: none;
        border: none;
        color: #888;
        font-size: 20px;
        cursor: pointer;
        padding: 0;
        display: flex;
        align-items: center;
        transition: color 0.3s;
    }

        .search-clear:hover {
            color: #ffffff;
        }

    .search-tabs {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .search-tab {
        padding: 8px 16px;
        background-color: #2a2a2a;
        border: none;
        border-radius: 20px;
        color: #888;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .search-tab.active {
            background-color: #667eea;
            color: #ffffff;
        }

        .search-tab:hover:not(.active) {
            background-color: #3a3a3a;
            color: #ffffff;
        }

    .content-section {
        margin-bottom: 40px;
    }

    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .section-title {
        font-size: 24px;
        font-weight: 700;
        color: #ffffff;
    }

    .see-all {
        color: #888;
        font-size: 14px;
        cursor: pointer;
        transition: color 0.3s;
    }

        .see-all:hover {
            color: #ffffff;
        }

    /* Track Grid */
    .track-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 20px;
    }

    .track-card {
        background-color: #2a2a2a;
        border-radius: 12px;
        padding: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .track-card:hover {
            background-color: #3a3a3a;
            transform: translateY(-5px);
        }

        .track-card.playing {
            background-color: #4a4a4a;
            border: 2px solid #ffffff;
        }

    .track-art {
        width: 100%;
        aspect-ratio: 1;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 8px;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
        overflow: hidden;
    }

        .track-art img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .track-title {
        font-size: 14px;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 4px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .track-artist {
        font-size: 12px;
        color: #888;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .track-source-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: rgba(102, 126, 234, 0.9);
        backdrop-filter: blur(10px);
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 10px;
        font-weight: 600;
        color: #ffffff;
    }

    .track-genre-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 10px;
        font-weight: 600;
        color: #ffffff;
    }

    /* Loading State */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        color: #888;
    }

    .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid #3a3a3a;
        border-top-color: #ffffff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #888;
    }

    .empty-state-icon {
        font-size: 64px;
        margin-bottom: 20px;
    }

    /* Scrollbar Styling */
    .main-content::-webkit-scrollbar {
        width: 8px;
    }

    .main-content::-webkit-scrollbar-track {
        background: #1a1a1a;
    }

    .main-content::-webkit-scrollbar-thumb {
        background: #3a3a3a;
        border-radius: 4px;
    }

        .main-content::-webkit-scrollbar-thumb:hover {
            background: #4a4a4a;
        }

    /* Search Loading */
    .search-loading {
        text-align: center;
        padding: 40px 20px;
        color: #888;
    }

        .search-loading .spinner {
            margin: 0 auto 20px;
        }
</style>

@if (isLoading)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p style="margin-top: 20px;">Loading your music...</p>
    </div>
}
else
{
    <div class="player-container">
        <!-- Main Content -->
        <div class="main-content">
            <!-- Search Section -->
            <div class="search-container">
                <div class="search-box">
                    <span class="search-icon">🔍</span>
                    <input type="text"
                           class="search-input"
                           placeholder="Search for music on Jamendo..."
                           @bind="searchQuery"
                           @bind:event="oninput"
                           @onkeyup="HandleSearchKeyUp" />
                    @if (!string.IsNullOrEmpty(searchQuery))
                    {
                        <button class="search-clear" @onclick="ClearSearch">✕</button>
                    }
                </div>
                <div class="search-tabs">
                    <button class="search-tab @(activeTab == "library" ? "active" : "")"
                            @onclick='() => SetActiveTab("library")'>
                        Your Library
                    </button>
                    <button class="search-tab @(activeTab == "jamendo" ? "active" : "")"
                            @onclick='() => SetActiveTab("jamendo")'>
                        Jamendo
                    </button>
                </div>
            </div>

            @if (activeTab == "jamendo" && isSearching)
            {
                <div class="search-loading">
                    <div class="spinner"></div>
                    <p>Searching Jamendo...</p>
                </div>
            }
            else if (activeTab == "jamendo" && jamendoResults.Any())
            {
                <!-- Jamendo Search Results -->
                <div class="content-section">
                    <div class="section-header">
                        <h2 class="section-title">Jamendo Results</h2>
                        <span style="color: #888; font-size: 14px;">@jamendoResults.Count tracks found</span>
                    </div>
                    <div class="track-grid">
                        @foreach (var track in jamendoResults)
                        {
                            <div class="track-card @(PlayerService.CurrentTrack?.Id == $"jamendo-{track.Id}" ? "playing" : "")"
                                 @onclick="() => PlayJamendoTrack(track)">
                                <div class="track-source-badge">JAMENDO</div>
                                <div class="track-art">
                                    @if (!string.IsNullOrEmpty(track.AlbumImage))
                                    {
                                        <img src="@track.AlbumImage" alt="@track.Name" />
                                    }
                                    else
                                    {
                                        <span>🎵</span>
                                    }
                                </div>
                                <div class="track-title">@track.Name</div>
                                <div class="track-artist">@track.ArtistName</div>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (activeTab == "jamendo" && !string.IsNullOrEmpty(searchQuery) && !isSearching)
            {
                <div class="empty-state">
                    <div class="empty-state-icon">🔍</div>
                    <h3>No results found</h3>
                    <p>Try searching for something else</p>
                </div>
            }
            else if (activeTab == "library")
            {
                @if (tracks.Any())
                {
                    <!-- Your Library Section -->
                    <div class="content-section">
                        <div class="section-header">
                            <h2 class="section-title">Your Library</h2>
                            <span class="see-all">See all ›</span>
                        </div>
                        <div class="track-grid">
                            @foreach (var track in tracks)
                            {
                                <div class="track-card @(PlayerService.CurrentTrack?.Id == $"local-{track.Id}" ? "playing" : "")"
                                     @onclick="() => PlayTrack(track)">
                                    @if (track.Genre != null)
                                    {
                                        <div class="track-genre-badge">@track.Genre.Name</div>
                                    }
                                    <div class="track-art">🎵</div>
                                    <div class="track-title">@track.Title</div>
                                    <div class="track-artist">@track.ArtistName</div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Genres Section -->
                    @if (genreGroups.Any())
                    {
                        @foreach (var genreGroup in genreGroups.Take(3))
                        {
                            <div class="content-section">
                                <div class="section-header">
                                    <h2 class="section-title">@genreGroup.Key</h2>
                                    <span class="see-all">See all ›</span>
                                </div>
                                <div class="track-grid">
                                    @foreach (var track in genreGroup.Take(6))
                                    {
                                        <div class="track-card @(PlayerService.CurrentTrack?.Id == $"local-{track.Id}" ? "playing" : "")"
                                             @onclick="() => PlayTrack(track)">
                                            <div class="track-genre-badge">@track.Genre?.Name</div>
                                            <div class="track-art">🎵</div>
                                            <div class="track-title">@track.Title</div>
                                            <div class="track-artist">@track.ArtistName</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">🎵</div>
                        <h3>No music found</h3>
                        <p>Add some tracks to get started</p>
                    </div>
                }
            }
        </div>
    </div>
}

@code {
    private List<Track> tracks = new();
    private bool isLoading = true;
    private IEnumerable<IGrouping<string, Track>> genreGroups = Enumerable.Empty<IGrouping<string, Track>>();
    private HashSet<int> favoriteTrackIds = new();

    // Search functionality
    private string searchQuery = "";
    private string activeTab = "library";
    private bool isSearching = false;
    private List<JamendoTrack> jamendoResults = new();
    private System.Threading.Timer? searchDebounceTimer;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            // Load favorite track IDs
            if (!string.IsNullOrEmpty(currentUserId))
            {
                var favoriteIds = await FavoriteService.GetUserFavoriteTrackIdsAsync(currentUserId);
                favoriteTrackIds = new HashSet<int>(favoriteIds);
            }
        }

        try
        {
            tracks = await DbContext.Tracks
                .Include(t => t.Genre)
                .Where(t => t.Source == TrackSource.Local && t.IsActive)
                .OrderBy(t => t.Title)
                .ToListAsync();

            // Group tracks by genre
            genreGroups = tracks
                .Where(t => t.Genre != null)
                .GroupBy(t => t.Genre!.Name)
                .OrderByDescending(g => g.Count());

            // Load playable tracks with favorite status and set in PlayerService
            var playableTracks = tracks.Select(t =>
                PlayableTrack.FromLocalTrack(t, favoriteTrackIds.Contains(t.Id))
            ).ToList();
            PlayerService.SetAvailableTracks(playableTracks);

            isLoading = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading tracks: {ex.Message}");
            isLoading = false;
        }
    }

    private void PlayTrack(Track track)
    {
        Console.WriteLine($"[MusicPlayer] Button clicked for: {track.Title}");

        // Check if track is favorited from the loaded set
        bool isFavorite = favoriteTrackIds.Contains(track.Id);

        var playableTrack = PlayableTrack.FromLocalTrack(track, isFavorite);
        Console.WriteLine($"[MusicPlayer] Created PlayableTrack, IsFavorite: {isFavorite}");
        PlayerService.PlayTrack(playableTrack);
        track.PlayCount++;
        StateHasChanged();
    }

    private void PlayJamendoTrack(JamendoTrack track)
    {
        var playableTrack = PlayableTrack.FromJamendoTrack(
            track.Id,
            track.Name,
            track.ArtistName,
            track.AudioUrl,
            track.AlbumImage
        );
        PlayerService.PlayTrack(playableTrack);
        StateHasChanged();
    }

    private void HandleSearchKeyUp(KeyboardEventArgs e)
    {
        searchDebounceTimer?.Dispose();
        searchDebounceTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                if (activeTab == "jamendo" && !string.IsNullOrEmpty(searchQuery))
                {
                    await SearchJamendo();
                }
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task SearchJamendo()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            jamendoResults.Clear();
            StateHasChanged();
            return;
        }

        try
        {
            isSearching = true;
            StateHasChanged();

            var clientId = Configuration["Jamendo:ClientId"];
            var url = $"https://api.jamendo.com/v3.0/tracks/?client_id={clientId}&format=json&limit=20&search={Uri.EscapeDataString(searchQuery)}&include=musicinfo&audioformat=mp32";

            var response = await HttpClient.GetFromJsonAsync<JamendoResponse>(url);

            if (response?.Results != null)
            {
                jamendoResults = response.Results;
            }
            else
            {
                jamendoResults.Clear();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching Jamendo: {ex.Message}");
            jamendoResults.Clear();
        }
        finally
        {
            isSearching = false;
            StateHasChanged();
        }
    }

    private void SetActiveTab(string tab)
    {
        activeTab = tab;
        if (tab == "jamendo" && !string.IsNullOrEmpty(searchQuery))
        {
            _ = SearchJamendo();
        }
        StateHasChanged();
    }

    private void ClearSearch()
    {
        searchQuery = "";
        jamendoResults.Clear();
        StateHasChanged();
    }

    public void Dispose()
    {
        searchDebounceTimer?.Dispose();
    }

    // Jamendo API Models
    public class JamendoResponse
    {
        [System.Text.Json.Serialization.JsonPropertyName("results")]
        public List<JamendoTrack> Results { get; set; } = new();
    }

    public class JamendoTrack
    {
        [System.Text.Json.Serialization.JsonPropertyName("id")]
        public string Id { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("name")]
        public string Name { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("artist_name")]
        public string ArtistName { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("album_name")]
        public string AlbumName { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("album_image")]
        public string AlbumImage { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("audio")]
        public string AudioUrl { get; set; } = "";

        [System.Text.Json.Serialization.JsonPropertyName("duration")]
        public int Duration { get; set; }
    }
}