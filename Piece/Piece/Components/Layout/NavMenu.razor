        }

        .toggle-btn {
            display: none;
        }
    }
</style>

@code {
    private bool isCollapsed = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var savedState = await JSRuntime.InvokeAsync<string?>("localStorage.getItem", "sidebarCollapsed");
                if (savedState == "true")
                {
                    isCollapsed = true;
                    StateHasChanged();
                }

                // Immediately apply the class
                await JSRuntime.InvokeVoidAsync("eval", @"
                    (function() {
                        const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
                        const sidebar = document.querySelector('.sidebar');
                        if (sidebar && isCollapsed) {
                            sidebar.classList.add('collapsed');
                        }

                        // Then start monitoring with faster interval
                        setInterval(function() {
                            const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
                            const sidebar = document.querySelector('.sidebar');
                            if (sidebar) {
                                if (isCollapsed && !sidebar.classList.contains('collapsed')) {
                                    sidebar.classList.add('collapsed');
                                } else if (!isCollapsed && sidebar.classList.contains('collapsed')) {
                                    sidebar.classList.remove('collapsed');
                                }
                            }
                        }, 10);
                    })();
                ");
            }
            catch { }
        }
    }

    private async Task ToggleSidebar()
    {
        isCollapsed = !isCollapsed;

        try
        {
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "sidebarCollapsed", isCollapsed.ToString().ToLower());

            if (isCollapsed)
            {
                await JSRuntime.InvokeVoidAsync("eval", "document.querySelector('.sidebar')?.classList.add('collapsed')");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("eval", "document.querySelector('.sidebar')?.classList.remove('collapsed')");
            }
        }
        catch { }

        StateHasChanged();
    }

    public async ValueTask DisposeAsync() { }
}