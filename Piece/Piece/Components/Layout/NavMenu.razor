@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<div class="nav-menu @(isCollapsed ? "collapsed" : "")" id="sidebar">
    <div class="nav-header">
        <div class="app-logo">
            <span class="logo-icon">🎵</span>
            @if (!isCollapsed)
            {
                <span class="logo-text">Piece</span>
            }
        </div>
        <button class="toggle-btn" @onclick="ToggleSidebar" type="button" title="Toggle Sidebar">
            @(isCollapsed ? "→" : "←")
        </button>
    </div>

    <nav class="nav-items">
        <div class="nav-section">
            @if (!isCollapsed)
            {
                <div class="section-label">DISCOVER</div>
            }
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="nav-icon">🏠</span>
                @if (!isCollapsed)
                {
                    <span class="nav-text">Home</span>
                }
            </NavLink>
            <NavLink class="nav-link" href="player">
                <span class="nav-icon">▶️</span>
                @if (!isCollapsed)
                {
                    <span class="nav-text">Player</span>
                }
            </NavLink>
            <NavLink class="nav-link" href="map">
                <span class="nav-icon">🗺️</span>
                @if (!isCollapsed)
                {
                    <span class="nav-text">Map</span>
                }
            </NavLink>
        </div>

        <div class="nav-section">
            @if (!isCollapsed)
            {
                <div class="section-label">YOURS</div>
            }
            <NavLink class="nav-link" href="playlists">
                <span class="nav-icon">📚</span>
                @if (!isCollapsed)
                {
                    <span class="nav-text">Library</span>
                }
            </NavLink>
            <NavLink class="nav-link" href="liked-songs">
                <span class="nav-icon">❤️</span>
                @if (!isCollapsed)
                {
                    <span class="nav-text">Favorites</span>
                }
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-section">
                    @if (!isCollapsed)
                    {
                        <div class="section-label">ACCOUNT</div>
                    }
                    <NavLink class="nav-link" href="Account/Manage/Statistics">
                        <span class="nav-icon">📊</span>
                        @if (!isCollapsed)
                        {
                            <span class="nav-text">Weekly Colors</span>
                        }
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-section">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="nav-icon">🔐</span>
                        @if (!isCollapsed)
                        {
                            <span class="nav-text">Login</span>
                        }
                    </NavLink>
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="nav-icon">✨</span>
                        @if (!isCollapsed)
                        {
                            <span class="nav-text">Sign Up</span>
                        }
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>

    <div class="nav-footer">
        <AuthorizeView>
            <Authorized>
                <form action="Account/Logout" method="post" class="logout-form">
                    <AntiforgeryToken />
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="nav-icon">👤</span>
                        @if (!isCollapsed)
                        {
                            <span class="nav-text">Profile</span>
                        }
                    </NavLink>
                    <button type="submit" class="logout-btn">
                        <span class="nav-icon">🚪</span>
                        @if (!isCollapsed)
                        {
                            <span class="nav-text">Logout</span>
                        }
                    </button>
                </form>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

